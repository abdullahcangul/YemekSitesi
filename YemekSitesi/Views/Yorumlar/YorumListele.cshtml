@model List<Yorum>
@{
    ViewBag.Title = "YorumListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["sil"] != null)
{
    <div class="alert alert-block alert-danger fade in">
        <button data-dismiss="alert" class="close close-sm" type="button">
            <i class="icon-remove"></i>
        </button>
        <strong>Hata!!!</strong> İlk Önce Yorum Cevaplari silin.
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yorum Listesi
            </header>
            <table class="table table-striped table-advance table-hover">

                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i>Adı</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> icerik </th>
                        <th>Tarih</th>
                        <th><i class="icon-bookmark"></i> Onaylımı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var yorum in Model)
                    {
                        <tr>
                            <td><a href="#">@yorum.ad</a></td>
                            @if (yorum.icerik.Length <= 10)
                            {
                                <td><a href="#">@yorum.icerik</a></td>

                            }
                            else
                            {
                                <td><a href="#">@yorum.icerik.Substring(0, 10)</a></td>
                            }
                            <td>@yorum.tarih</td>
                            <td>@yorum.onaylimi </td>
                            <td>
                                <a href="/Yorumlar/YorumDetay/@yorum.yorumID" class="btn btn-success btn-xs"><i class="icon-ok"></i></a>
                                <a href="/Yorumlar/YorumSil/@yorum.yorumID" onclick="return confirm('Silmek istediğinizden emin misiniz ?')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                        if (yorum.YorumCevap != null)
                        {
                            foreach (var cevap in yorum.YorumCevap)
                            {
                        <tr>
                            <td><a href="#">@cevap.ad</a></td>
                            @if (yorum.icerik.Length <= 10)
                            {
                                <td><a href="#">@yorum.icerik</a></td>

                            }
                            else
                            {
                                <td><a href="#">@yorum.icerik.Substring(0, 10)</a></td>
                            }
                            <td>@cevap.tarih</td>
                            @if (@cevap.cevapOnaylimi == true)
                            {
                                <td><a href="#">Onaylı</a></td>

                            }
                            else
                            {
                                <td><a href="#">Onaysız</a></td>
                            }
                            <td> </td>
                            <td>
                                <a href="/Yorumlar/YorumCevapDetay/@cevap.YorumCevapID" class="btn btn-success btn-xs"><i class="icon-ok"></i></a>
                                <a href="/Yorumlar/YorumCevapSil/@cevap.YorumCevapID" onclick="return confirm('Silmek istediğinizden emin misiniz ?')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                            }
                        }

                    }
                </tbody>
            </table>
        </section>
    </div>
</div>


