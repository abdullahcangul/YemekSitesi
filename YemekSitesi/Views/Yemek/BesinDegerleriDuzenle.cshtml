@model BesinDegerleri
@{
    ViewBag.Title = "BesinDegerleriDuzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <h2>Besin Degerleri Duzenle</h2>

        </header>
        <div class="panel-body">
            @using (Html.BeginForm())
            {

                if (ViewData["Hata"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                        @ViewData["Hata"]
                    </div>
                }

                @Html.ValidationSummary()

                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.LabelFor(x => x.besinAdi)
                            @Html.TextBoxFor(x => x.besinAdi, new { @class = "form-control", placeholder = "Besin  adını giriniz", @value = "" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">

                            @Html.LabelFor(x => x.deger)
                            @Html.TextBoxFor(x => x.deger, new { @class = "form-control", placeholder = "Deger  giriniz", @value = "" })
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-info pull-right ">Duzenle</button>

            }
            <a class="btn btn-info" href="/Yemek/YemekDetay/@Model.yemekID">Detay Sayfasına Dön</a>

        </div>
    </section>
</div>


