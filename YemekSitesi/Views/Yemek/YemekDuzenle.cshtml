
@model  YemekSitesi.Models.Yemek
@{
    ViewBag.Title = "YemekDuzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}







<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <h2>Yemek Duzenle</h2>

        </header>
        <div class="panel-body">
            @using (Html.BeginForm("YemekDuzenle", "Yemek", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                if (ViewData["Hata"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                        @ViewData["Hata"]
                    </div>
                }

                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(x => x.ad)
                    @Html.TextBoxFor(x => x.ad, new { @class = "form-control", placeholder = "Tarif adını giriniz" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.kacKisilik)
                    @Html.TextBoxFor(x => x.kacKisilik, new { @class = "form-control", @placeholder = "Kaç kisilik" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.pisirmeSuresi)
                    @Html.TextBoxFor(x => x.pisirmeSuresi, new { @class = "form-control", @placeholder = "Pisirme Süresi" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.zorlukDerecesiID)
                    @Html.DropDownList("zorlukDerecesiID", (SelectList)ViewBag.zorlukDerecesi, "Zorluk seviyesi seçiniz...", new { @class = "form-control m-bot15" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ulkeID)
                    @Html.DropDownList("ulkeID", (SelectList)ViewBag.ulke, "Ulke seçiniz...", new { @class = "form-control m-bot15" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.kategoriID)
                    @Html.DropDownList("kategoriID", (SelectList)ViewBag.kategori, "Ulke seçiniz...", new { @class = "form-control m-bot15" })
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Resim</label>
                    <div class="col-md-4">
                        <input name="resimGelen" type="file" class="default">
                    </div>
                </div>


                <button type="submit" class="btn btn-info pull-right ">Duzenle</button>

            }

        </div>
    </section>
</div>





