@model List<Kategori>
@{
    ViewBag.Title = "KategoriListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




@section header{
    <link href="/Content/Admin/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
    <link href="/Content/Admin/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />
}
@if (TempData["tehlikeli"] != null)
{
    <div class="alert alert-danger">
        @TempData["tehlikeli"]
    </div>
}
@if (TempData["uyari"] != null)
{
    <div class="alert alert-success">
        @TempData["uyari"]
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Listesi
                <a href="/Kategorik/KategoriEkle" class="btn btn-info btn-sm pull-right ">
                    <i class="fa fa-plus"></i> Kategori Ekle
                </a>
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th><i class="icon-align-justify"></i> Kategori adı</th>
                                <th><i class="icon-camera"></i> Resim </th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kategori in Model)
                            {
                                <tr>

                                    <td><a href="#">@kategori.kategoriAdi</a></td>
                                    <td class="hidden-phone center"><img src="~/Content/Resimler/Kategoriler/@kategori.resim" width="40" /></td>

                                    <td>
                                        <a href="/Kategorik/KategoriDuzenle/@kategori.kategoriID" class="btn btn-primary btn-xs"> <i class="icon-pencil"></i></a>
                                        <a href="/Kategorik/KategoriSil/@kategori.kategoriID" onclick="return confirm('Silmek istediğinizden emin misiniz ?')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </section>
    </div>
</div>



@section footer{

    <script type="text/javascript" language="javascript" src="/Content/Admin/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>



    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#example').dataTable({
                "aaSorting": [[4, "desc"]],
                "oLanguage": {
                    "sSearch": "Ara:",
                    "sLengthMenu": "Getir _MENU_ kayıt",
                    "sInfo": " _START_ den _END_ kadar Toplam _TOTAL_ madde gösterildi",
                    "sEmptyTable": "Veri Bulunanadı",
                    "oPaginate": {
                        "sNext": "ileri",
                        "sPrevious": "Geri"
                    }
                },

            });
        });
    </script>
}

