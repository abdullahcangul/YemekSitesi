@model List<ZorlukDerecesi>
@{
    ViewBag.Title = "ZorlukListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Zorluk Derecesi Listesi
                <a href="/Kategorik/ZorlukEkle" class="btn btn-info btn-sm pull-right ">
                    <i class="fa fa-plus"></i> Zorluk Derecesi Ekle
                </a>
            </header>
            <table class="table table-striped table-advance table-hover">

                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> Zorluk Derecesi</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var zorluk in Model)
                    {
                        <tr>
                            <td><a href="#">@zorluk.zorlukTanımı</a></td>

                            <td>
                                <a href="/Kategorik/ZorlukDuzenle/@zorluk.zorlukDerecesiID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                <a href="/Kategorik/ZorlukSil/@zorluk.zorlukDerecesiID" onclick="return confirm('Silmek istediğinizden emin misiniz ?')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
