@model List<Ulkeler>
@{
    ViewBag.Title = "UlkeListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ulke Listesi
                <a href="/Kategorik/UlkeEkle" class="btn btn-info btn-sm pull-right ">
                    <i class="fa fa-plus"></i> Ulke Ekle
                </a>
            </header>
            <table class="table table-striped table-advance table-hover">

                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> Ulke Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var ulke in Model)
                    {
                        <tr>
                            <td><a href="#">@ulke.ulkeAd</a></td>
                            
                            <td>
                                <a href="/Kategorik/UlkeDuzenle/@ulke.ulkeID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                <a href="/Kategorik/UlkeSil/@ulke.ulkeID" onclick="return confirm('Silmek istediğinizden emin misiniz ?')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
