@model Ulkeler
@{
    ViewBag.Title = "UlkeEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <h2>Kategori Ekle</h2>

        </header>
        <div class="panel-body">
            @using (Html.BeginForm())
            {

                if (ViewData["Hata"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                        @ViewData["Hata"]
                    </div>
                }

                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(x => x.ulkeAd)
                    @Html.TextBoxFor(x => x.ulkeAd, new { @class = "form-control", placeholder = "Ulke adını giriniz" })
                </div>

                <button type="submit" class="btn btn-info pull-right ">Ekle</button>

            }

        </div>
    </section>
</div>
