@model Blog
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

<div class="wrap clearfix">
    <!--breadcrumbs-->
    <nav class="breadcrumbs">
        <ul>
            <li><a href="index-2.html" title="Home">Home</a></li>
            <li><a href="#" title="Blog">Blog</a></li>
            <li>Post</li>
        </ul>
    </nav>
    <!--//breadcrumbs-->
    <!--row-->
    <main class="main" role="main">
        <div class="row">
            <header class="s-title">
                <h1>@Model.baslik </h1>
            </header>


            <!--content-->
            <section class="content three-fourth">
                <!--blog entry-->
                <article class="post single">
                    <div class="entry-meta">
                        <div class="date">
                            <span class="day">@{DateTime d = (DateTime)@Model.tarih;} @d.Day</span>
                            <span class="my">@d.Month. @d.Year </span>
                        </div>
                        <div class="avatar">
                            <a href="my_profile.html"><img src="/Content/Resimler/Kullanicilar/@Model.Kullanici.resim" alt="" /><span>@Model.Kullanici.ad</span></a>
                        </div>
                    </div>
                    <div class="container">
                        <div class="entry-featured"><a href="#"><img width="800px;" src="/Content/Resimler/Bloglar/@Model.resim" alt="" /></a></div>
                        <div class="entry-content">
                            <p class="lead">@Model.icerik </p>

                        </div>
                    </div>
                </article>
                <!--//blog entry-->
                <!--comments-->
                @if (@Model.Yorum != null)
                {
                <div class="comments" id="comments">
                    <h2>Yorum Sayısı @Model.Yorum.Count </h2>
                    @foreach (var yorum in Model.Yorum)
                    {
                        if (yorum.onaylimi==true)
                        {
                            <ol class="comment-list">
                                <!--comment-->
                                <li class="comment depth-1">

                                    <div class="comment-box">
                                        <div class="comment-author meta">
                                            <strong>@yorum.ad @yorum.soyad</strong>  <a href="#" class="comment-reply-link"> @yorum.tarih</a>
                                        </div>
                                        <div class="comment-text">
                                            <p>@yorum.icerik</p>
                                        </div>
                                    </div>
                                </li>
                                <!--//comment-->
                                <!--//comment-->

                            </ol>

                        }
                    }
                </div>
                }
                <!--//comments-->
                <!--respond-->
                    <div class="comment-respond" id="respond">
                        <h2>Leave a reply</h2>
                        <div class="container">
                            <p><strong>Note:</strong> Comments on the web site reflect the views of their authors, and not necessarily the views of the socialchef internet portal. Requested to refrain from insults, swearing and vulgar expression. We reserve the right to delete any comment without notice explanations.</p>
                            <p>Your email address will not be published. Required fields are signed with <span class="req">*</span></p>

                            @using (Html.BeginForm())
                            {
                                <div class="f-row">
                                    <div class="third">
                                        <input type="text" name="ad" placeholder="isminizi  giriniz" />
                                        <span class="req">*</span>
                                    </div>
                                    <div class="third">
                                        <input type="text" name="soyad" placeholder="soyadınızı  giriniz" />
                                        <span class="req">*</span>
                                    </div>
                                </div>
                                <div class="f-row">
                                    <textarea  name="icerik"></textarea>
                                </div>

                                <div>
                                    <div class="third bwrap">
                                        <button class="pull-right" name="id" val type="submit" value="@Model.blogID">Ekle</button>
                                    </div>
                                </div>

                            }


                        </div>
                    </div>
                <!--//respond-->
            </section>
            <!--//content-->
            <!--right sidebar-->
            <aside class="sidebar one-fourth">
                <div class="widget">
                    <ul class="categories right">
                        <li><a  href="/Anasayfa/Bloglar">Tum Kateguriler</a></li>
                        @Html.Action("resimsizKategoriler", "Anasayfa")
                    </ul>
                </div>
                <div class="widget">
                    <h3>Reklam Alanı</h3>
                    <a href="#"><img src="/Content/social-chef/images/advertisment.jpg" alt="" /></a>
                </div>
            </aside>
            <!--//right sidebar-->
        </div>
    </main>
    
    <!--//row-->
</div>

