
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

<main class="main" style="margin-top:100px;" role="main">
    <!--wrap-->
    <div class="wrap clearfix">
        <!--row-->
        <div class="row">
            <!--content-->
            <section class="content center full-width">
                <div class="modal container">
                    <h3>Giriş</h3>
                    @using (Html.BeginForm())
                    {
                        <div class="f-row">
                            <input name="ad" type="text" placeholder="Your username" />
                        </div>
                        <div class="f-row">
                            <input name="sifre" type="password" placeholder="Your password" />
                        </div>

                        <div class="f-row">
                            <input type="checkbox" />
                            <label>Remember me next time</label>
                        </div>

                        <div class="f-row bwrap">
                            <input type="submit" value="login" />
                        </div>
                        <p>Dont have an account yet? <a href="register.html">Sign up.</a></p>
                    }
                    </div>
            </section>
            <!--//content-->
        </div>
        <!--//row-->
    </div>
    <!--//wrap-->
</main>