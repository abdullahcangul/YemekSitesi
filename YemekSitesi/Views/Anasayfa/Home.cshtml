@model List<Yemek>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
    YemekSitesi.HomeModel hm = (HomeModel)ViewBag.sayi;
    Random rastgele = new Random();
    int sayi = rastgele.Next(5);
}


<main class="main" role="main">
    <!--intro-->
    <div class="intro">
        <figure class="bg"><img src="/Content/social-chef/images/intro.jpg" alt="" /></figure>

        <!--wrap-->
        <div class="wrap clearfix">
            <!--row-->
            <div class="row">
                <article class="three-fourth text">
                    <h1>Welcome to SocialChef!</h1>
                    <p>SocialChef is the ultimate <strong>cooking social community</strong>, where recipes come to life. Wanna know what you will gain by joining us? Lorem ipsum dolor sit amet, this is some teaser text.</p>
                    <p>You will win awesome prizes, make new friends and share delicious recipes. </p>
                    <a href="/AnaSayfa/KayıtOl" class="button white more medium">Katıl bize<i class="fa fa-chevron-right"></i></a>
                    <p>Zaten Kayıtlı misin? <a href="/Login/Index">tıkla</a> Giris yapmak için</p>
                </article>

                <!--search recipes widget-->
                <div class="one-fourth">
                    <div class="widget container">
                        <div class="textwrap">
                            <h3>Search for recipes</h3>
                            <p>All you need to do is enter an igredient, a dish or a keyword. </p>
                            <p>You can also select a specific category from the dropdown.</p>
                            <p>There’s sure to be something tempting for you to try.</p>
                            <p>Enjoy!</p>
                        </div>

                        @using (Html.BeginForm("Arama", "Anasayfa"))
                        {
                            <div class="f-row">
                                <input type="text" name="ad" placeholder="Aramak istedigin terimi gir" />
                            </div>

                            <div class="f-row bwrap">
                                <input type="submit" value="Aramaya Basla!" />
                            </div>
                        }

                    </div>
                </div>
                <!--//search recipes widget-->
            </div>
            <!--//row-->
        </div>
        <!--//wrap-->
    </div>
    <!--//intro-->
    <!--wrap-->
    <div class="wrap clearfix">
        <!--row-->
        <div class="row">
            <!--content-->
            <section class="content full-width">
                <div class="icons dynamic-numbers">
                    <header class="s-title">
                        <h2 class="ribbon large">SocialChef in numbers</h2>
                    </header>

                    <!--row-->
                    <div class="row">
                        <!--item-->
                        <div class="one-fourth">
                            <div class="container">
                                <i class="icon icon-themeenergy_chef-hat"></i>
                                <span class="title dynamic-number" data-dnumber="@hm.yemekSayisi">0</span>
                                <span class="subtitle">Tarif</span>
                            </div>
                        </div>
                        <!--//item-->
                        <!--item-->
                        <div class="one-fourth">
                            <div class="container">
                                <i class="icon icon-themeenergy_pan"></i>
                                <span class="title dynamic-number" data-dnumber="@hm.blogSayisi">0</span>
                                <span class="subtitle">Blog</span>
                            </div>
                        </div>
                        <!--//item-->
                        <!--item-->
                        <div class="one-fourth">
                            <div class="container">
                                <i class="icon icon-themeenergy_image"></i>
                                <span class="title dynamic-number" data-dnumber="@hm.kullaniciSayisi">0</span>
                                <span class="subtitle">Kullanici</span>
                            </div>
                        </div>
                        <!--//item-->
                        <!--item-->
                        <div class="one-fourth">
                            <div class="container">
                                <i class="icon icon-themeenergy_pencil"></i>
                                <span class="title dynamic-number" data-dnumber="@hm.yorumSayisi">0</span>
                                <span class="subtitle">Yorum</span>
                            </div>
                        </div>
                        <!--//item-->


                        <div class="cta">
                            <a href="/Anasayfa/KayıtOl" class="button big">Katıl bize</a>
                        </div>
                    </div>
                    <!--//row-->
                </div>
            </section>
            <!--//content-->
            <!--content-->
            <section class="content three-fourth">
                <!--cwrap-->
                <div class="cwrap">
                    <!--entries-->
                    <div class="entries row">
                        <!--featured recipe-->
                        <div class="featured two-third">
                            <header class="s-title">
                                <h2 class="ribbon">Günün Tarifi</h2>
                            </header>
                            <article class="entry">
                                <figure>
                                    <img width="600px;" src="/Content/Resimler/Yemekler/@Model[sayi].resim" alt="" />
                                    <figcaption><a href="/Anasayfa/tarif/@Model[sayi].yemekID"><i class="icon icon-themeenergy_eye2"></i> <span>Görüntüle</span></a></figcaption>
                                </figure>
                                <div class="container">
                                    <h2><a href="/Content/social-chef/recipe.html">@Model[sayi].ad</a></h2>
                                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. </p>
                                    <div class="actions">
                                        <div>
                                            <a href="/Anasayfa/TarifListele" class="button">Daha Fazlası</a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <!--//featured recipe-->
                        <!--featured member-->
                        <div class="featured one-third">
                            <header class="s-title">
                                <h2 class="ribbon star">Featured member</h2>
                            </header>
                            <article class="entry">
                                <figure>
                                    <img src="~/Content/Resimler/Kullanicilar/@Model[sayi].Kullanici.resim" alt="@Model[sayi].Kullanici.ad" />
                                    <figcaption><a href="/Anasayfa/KullaniciArama/@Model[sayi].Kullanici.kullaniciID"><i class="icon icon-themeenergy_eye2"></i> <span>Gözat</span></a></figcaption>
                                </figure>
                                <div class="container">
                                    <h2><a href="/Anasayfa/KullaniciArama/@Model[sayi].Kullanici.kullaniciID">@Model[sayi].Kullanici.ad @Model[sayi].Kullanici.soyad</a></h2>
                                    <blockquote><i class="fa fa-quote-left"></i>Traditional dishes and fine bakery products accompanied by beautiful photographs to bend around and attract the tryout! Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</blockquote>
                                    <div class="actions">
                                        <div>
                                            <a href="/Anasayfa/KullaniciArama/@Model[sayi].Kullanici.kullaniciID" class="button">Tariflerini Kontrol Et</a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <!--//featured member-->
                    </div>
                    <!--//entries-->
                </div>
                <!--//cwrap-->
                <!--cwrap-->
                <div class="cwrap">
                    <header class="s-title">
                        <h2 class="ribbon bright">Son Tarifler</h2>
                    </header>
                    <div class="entries row">
                        <!--entries-->
                        @foreach (var yemek in @Model)
                        {


                            <!--item-->
                            <div class="entry one-third">
                                <figure>
                                    <img src="/Content/Resimler/Yemekler/@yemek.resim" alt="" />
                                    <figcaption><a href="/Anasayfa/Tarif/@yemek.yemekID"><i class="icon icon-themeenergy_eye2"></i> <span>Gözat</span></a></figcaption>
                                </figure>
                                <div class="container">
                                    @if (@yemek.aciklama.Length > 15)
                                    {
                                        <h2><a href="/Anasayfa/Tarif/@yemek.yemekID">@yemek.aciklama.Substring(0,15)...</a></h2>
                                    }
                                    else
                                    {
                                        <h2><a href="/Anasayfa/Tarif/@yemek.yemekID">@yemek.aciklama</a></h2>
                                    }
                                    <div class="actions">
                                        <div>
                                            <div class="difficulty"><i class="ico i-medium"></i><a href="#">@yemek.ZorlukDerecesi.zorlukTanımı</a></div>
                                            <div class="likes"><i class="fa fa-heart"></i><a href="#">@yemek.Yorum.Count()</a></div>
                                            <div class="comments"><i class="fa fa-comment"></i><a href="recipe.html#comments">27</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="quicklinks">
                            <a href="/Anasayfa/TarifListele" class="button">Daha Fazla Tarif</a>
                            <a href="javascript:void(0)" class="button scroll-to-top">Yukari çık</a>
                        </div>
                    </div>
                    <!--//entries-->
                </div>
                <!--//cwrap-->
                <!--cwrap-->
                <div class="cwrap">
                    <header class="s-title">
                        <h2 class="ribbon bright">Bloglar</h2>
                    </header>
                    <!--entries-->
                    <div class="entries row">
                        @foreach (Blog blog in ViewBag.Blog)
                        {
                            <div class="entry one-third">
                                <figure>
                                    <img src="~/Content/Resimler/Bloglar/@blog.resim" alt="" />
                                    <figcaption><a href="/Anasayfa/Blog/@blog.blogID"><i class="icon icon-themeenergy_eye2"></i> <span>Gözat</span></a></figcaption>
                                </figure>
                                <div class="container">
                                    <h2><a href="/Anasayfa/Blog/@blog.blogID">@blog.baslik</a></h2>
                                    <div class="actions">
                                        <div>
                                            <div class="date"><i class="fa fa-calendar"></i><a href="#">@blog.tarih</a></div>

                                            @if (@blog.Yorum == null)
                                            {
                                                <div class="comments">
                                                    <i class="fa fa-comment"></i><a href="blog_single.html#comments">
                                                        0
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="comments">
                                                    <i class="fa fa-comment"></i><a href="blog_single.html#comments">
                                                        @blog.Yorum.Count()
                                                    </a>
                                                </div>
                                            }


                                        </div>
                                    </div>
                                    <div class="excerpt">
                                        @if (blog.icerik.Length > 20)
                                        {
                                            <p>@blog.icerik.Substring(0, 30)... </p>
                                        }
                                        else
                                        {
                                            <p>@blog.icerik </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        <!--item-->
                        <!--item-->
                        <!--item-->
                        <!--item-->

                        <div class="quicklinks">
                            <a href="/Anasayfa/Bloglar" class="button">Daha Fazla Blog</a>
                            <a href="javascript:void(0)" class="button scroll-to-top">Yukari çık</a>
                        </div>
                    </div>
                    <!--//entries-->
                </div>
                <!--//cwrap-->
            </section>
            <!--//content-->
            <!--right sidebar-->
            <aside class="sidebar one-fourth">
                <div class="widget">
                    <h3>Kategoriler</h3>
                    @Html.Action("Kategoriler", "Anasayfa")
                </div>
                <div class="widget members">
                    @Html.Action("KullaniciLar", "Anasayfa")
                </div>

                <div class="widget">
                    <h3>Advertisment</h3>
                    <a href="#"><img src="/Content/social-chef/images/advertisment.jpg" alt="" /></a>
                </div>
            </aside>
        </div>
        <!--//right sidebar-->
    </div>
    <!--//wrap-->
</main>
@section homeAlt{

    <section class="cta">
        <div class="wrap clearfix">
            <a href="http://themeforest.net/item/socialchef-social-recipe-html-template/8568727?ref=themeenergy" class="button big white right">Purchase theme</a>
            <h2>Already convinced? This is a call to action section lorem ipsum dolor sit amet.</h2>
        </div>
    </section>
}