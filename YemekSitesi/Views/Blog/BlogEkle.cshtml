@model Blog
@{
    ViewBag.Title = "BlogEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <h2>Blog Ekle</h2>

        </header>
        <div class="panel-body">
            @using (Html.BeginForm("BlogEkle", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                if (ViewData["Hata"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                        @ViewData["Hata"]
                    </div>
                }

                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(x => x.baslik)
                    @Html.TextBoxFor(x => x.baslik, new { @class = "form-control", placeholder = "Baslık giriniz" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.icerik)
                    @Html.TextBoxFor(x => x.icerik, new { @class = "form-control", @placeholder = "Icerik kisilik" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.KategoriID)
                    @Html.DropDownList("kategoriID", (SelectList)ViewBag.kategori, "Kategori seçiniz...", new { @class = "form-control m-bot15" })
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input type="file" name="resimGelen" class="form-control" placeholder="Resim giriniz.">
                </div>



                <button type="submit" class="btn btn-info pull-right ">Ekle</button>

            }

        </div>
    </section>
</div>

